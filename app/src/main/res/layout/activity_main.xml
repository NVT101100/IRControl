<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/Home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/TVTouch"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="119dp"
                android:orientation="vertical"
                android:background="@drawable/sel_item">

                <ImageView
                    android:id="@+id/TVButton"
                    android:layout_width="167dp"
                    android:layout_height="91dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/img" />

                <TextView
                    android:id="@+id/TVText"
                    android:layout_width="76dp"
                    android:layout_height="31dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="TV" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/FanTouch"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="119dp"
                android:orientation="vertical"
                android:background="@drawable/sel_item">

                <ImageView
                    android:id="@+id/FanButton"
                    android:layout_width="161dp"
                    android:layout_height="93dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/img_1" />

                <TextView
                    android:id="@+id/FanText"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Quạt" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/AirTouch"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="119dp"
                android:orientation="vertical"
                android:background="@drawable/sel_item">

                <ImageView
                    android:id="@+id/AirButton"
                    android:layout_width="match_parent"
                    android:layout_height="91dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/img_3" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Điều hòa" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/FridgeTouch"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="119dp"
                android:orientation="vertical"
                android:background="@drawable/sel_item">

                <ImageView
                    android:id="@+id/FridgeButton"
                    android:layout_width="match_parent"
                    android:layout_height="91dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/img_2" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Tủ lạnh" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>